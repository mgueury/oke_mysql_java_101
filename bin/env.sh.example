# Set JAVA_HOME to JAVA 11 in the OCI console
if [ -d "/usr/lib/jvm/java-11" ]; then
  export PATH=/usr/lib/jvm/java-11/bin:$PATH
  export JAVA_HOME=/usr/lib/jvm/java-11
fi

# Set GRAALVM_HOME for Native mode
if [ -d "/usr/lib64/graalvm/graalvm22-ee-java11" ]; then
  export GRAALVM_HOME=/usr/lib64/graalvm/graalvm22-ee-java11 
fi

